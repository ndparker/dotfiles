#!/bin/sh
set -e

bin=~/bin
vdir="${bin}"/.busylight.venv

rebuild=1
if [ -d "${vdir}/bin" ]; then
    . "${vdir}/bin/activate" && rebuild= || true
fi
if [ -n "${rebuild}" ]; then
    rm -rf -- "${vdir}"
    mkdir -p -- "${vdir}"
    (
        cd "${vdir}" || exit $?
        virtualenv --python python3.9 . || exit $?
        rm -f .installed
    ) || exit $?
    . "${vdir}/bin/activate"
fi

if [ ! -f "${vdir}/.installed" ]; then
    pip install busylight-for-humans
    touch -- "${vdir}/.installed"
fi

exec "${vdir}/bin/busylight" "$@"
